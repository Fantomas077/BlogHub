@model BlogHub.Models.Article

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div id="main-content" class="blog-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-12">
                <div class="mb-4">
                    <img src="/@Model.ImageName" asp-append-version="true" class="py-2" style="width:800px;height:500px" alt="@Model.Title">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Title</h3>
                        <span class="badge rounded-pill bg-secondary">@Model.Category.Name</span>
                        <p class="card-text">@Html.Raw(Model.Content)</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12">
                <div class="card">
                    <div class="card-body search">
                        <div class="input-group ">
                            <input type="text" class="form-control mx-2" placeholder="Search...">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title">Categories</h5>
                    </div>
                   @*  <div class="card-body widget">
                        <ul class="list-unstyled categories-clouds">
                       
                             @foreach (var category in Model.Category)
                            {
                                <li><a href="#">@category.Name</a></li>
                            } 
                        </ul>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>
