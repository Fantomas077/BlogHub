@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> _signInManager

<ul class="navbar-nav">
    @if (_signInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle mx-5" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle "></i>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
                <li><a class="dropdown-item" asp-action="Profile" asp-controller="Account">Profile</a></li>
               
                
            </ul>
        </li>
        <form id="form-language" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path">
            <select name="culture" id="select-language" onchange="this.form.submit()">
                <option value="en">English</option>
                <option value="fr">French</option>
                <option value="de">Deutsch</option>
                <!-- Ajoutez d'autres langues si nécessaire -->
            </select>
        </form>
        
        
           
        

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <div>
            <form id="form-language" asp-controller="Home" asp-action="SetLanguage" asp-route-returnUrl="@Context.Request.Path">
                <select name="culture" id="select-language" onchange="this.form.submit()">
                    <option value="en">English</option>
                    <option value="fr">French</option>
                    <option value="de">Deutsch</option>
                    <!-- Ajoutez d'autres langues si nécessaire -->
                </select>
            </form>
        </div>

    }


</ul>